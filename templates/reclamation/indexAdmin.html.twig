{% extends 'base.backoffice.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}




<button onclick="window.location.href='{{ path('fetch_reclamations_by_status', {'status': 'en attente'}) }}'" class="btn btn-secondary">En Attente</button>
<button onclick="window.location.href='{{ path('fetch_reclamations_by_status', {'status': 'traitement'}) }}'" class="btn btn-secondary">En Traitement</button>
<button onclick="window.location.href='{{ path('fetch_reclamations_by_status', {'status': 'cloturee'}) }}'" class="btn btn-secondary">Clotur√©e</button>
<button onclick="window.location.href='{{ path('app_reclamation_index') }}'" class="btn btn-secondary">All</button>
<a href="{{ path('app_stats_index')}}"  style=" margin-left: 680px;" class="btn btn-secondary"> Gerer les Statistiques</a>

    
    <h1>Reclamations des clients :</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdReclamation</th>
                <th>Utilisateur</th>
                <th>Type</th>
                <th>Contenu</th>
                <th>Status</th>
                <th>DateEnv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.idReclamation }}</td>
                <td>{{ reclamation.idUser.prenom }} <h6> </h6> {{ reclamation.idUser.nom }}</td>
                <td>{{ reclamation.type }}</td>
                <td>{{ reclamation.contenu }}</td>
                <td>{{ reclamation.status }}</td>
                <td>{{ reclamation.dateEnv ? reclamation.dateEnv|date('Y-m-d') : '' }}</td>
                <td>

                    
                    <a href="{{ path('app_reponse_new', {'idReclamation': reclamation.idReclamation}) }}" class="btn btn-primary">repondre</a>
                    <br></br>
                    <a href="{{ path('app_reponse_admin', {'idReclamation': reclamation.idReclamation}) }}" class="btn btn-primary">reponses</a>
                    

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
