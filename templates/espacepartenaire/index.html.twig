{% extends 'base.backoffice.html.twig' %}

{% block title %}Espacepartenaire index{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="main">
            <div class="inner">
                <!-- Services -->
                <section class="services">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <!-- Search Form -->
                                <form method="get" action="{{ path('app_espacepartenaire_index') }}" class="mb-3">
                                    <div class="input-group">
                                        <input type="text" name="query" class="form-control" placeholder="Search by name or type..." value="{{ query }}">
                                        <button type="submit" class="btn btn-primary">Search</button>
                                    </div>
                                </form>

                                <!-- Sorting Links -->
                                <div class="mb-3">
                                    <a href="{{ path('app_espacepartenaire_index', {'sort': 'nbclick'}) }}" class="btn btn-secondary">Trier par Consultations</a>
                                    <a href="{{ path('app_espacepartenaire_index', {'sort': 'nom'}) }}" class="btn btn-secondary">Trier par nom</a>
                                    <a href="{{ path('app_espacepartenaire_index', {'sort': 'accepted'}) }}" class="btn btn-secondary">Afficher les espace en attente</a>

                                </div>

                                <!-- Espacepartenaire Table -->
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>Localisation</th>
                                            <th>Type</th>
                                            <th>Nombre de Consultations</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% if espacepartenaires is not empty %}
                                            {% for espacepartenaire in espacepartenaires %}
                                                <tr>
                                                    <td>{{ espacepartenaire.nom }}</td>
                                                    <td>{{ espacepartenaire.localisation }}</td>
                                                    <td>{{ espacepartenaire.getIdType.nomtype }}</td>
                                                    <td>{{ espacepartenaire.nbclick}}</td>
                                                    <td>{{ espacepartenaire.description }}</td>
                                                    <td>
                                                        <a href="{{ path('app_espacepartenaire_show', {'idEspace': espacepartenaire.idEspace}) }}" class="btn btn-primary">Show</a>
                                                        {% if not espacepartenaire.accepted %}
                                                            <button onclick="acceptEspacepartenaire('{{ espacepartenaire.idEspace }}')" class="btn btn-success">Accept</button>
                                                        {% endif %}
                                                        <a href="{{ path('app_espacepartenaire_delete', {'idEspace': espacepartenaire.idEspace}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% else %}
                                            <tr>
                                                <td colspan="5">No records found</td>
                                            </tr>
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <script>
        function acceptEspacepartenaire(id) {
            var form = document.getElementById("acceptForm_" + id);
            var formData = new FormData(form);
            fetch(form.action, {
                method: 'POST',
                body: formData
            }).then(response => {
                if (response.ok) {
                    location.reload(); // Refresh the page
                } else {
                    // Handle the error case
                }
            }).catch(error => {
                // Handle network errors
            });
        }
    </script>
{% endblock %}
