{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Define blue and green colors */
        .blue { color: #007bff; }
        .green { color: #28a745; }

        /* Add styles for the table */
        .table {
            width: 100%;
            max-width: 100%;
            margin-bottom: 1rem;
            background-color: #f8f9fa;
            color: #212529;
            border-collapse: collapse;
        }

        .table th, .table td {
            padding: .75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }

        .table th {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }

        /* Define styles for links */
        .link {
            color: #28a745;
            text-decoration: none;
        }
        .link:hover {
            color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
<div style="padding-top: 200px;" class="container">
    <h1 class="blue">Evenement</h1>

    <!-- Google Translate element -->
    <div id="google_translate_element"></div>
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({pageLanguage: 'fr'}, 'google_translate_element');
        }
    </script>
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

    <table class="table">
        <tbody>
            <tr>
                <th>IdEvent</th>
                <td>{{ evenement.idEvent }}</td>
            </tr>
            <tr>
                <th>NomEvent</th>
                <td>{{ evenement.nomEvent }}</td>
            </tr>
            <tr>
                <th>DateEvent</th>
                <td>{{ evenement.dateEvent }}</td>
            </tr>
            <tr>
                <th>Capacite</th>
                <td>{{ evenement.capacite }}</td>
            </tr>
            <tr>
                <th class="blue">Description (French)</th>
                <td>{{ evenement.description }}</td>
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('app_evenement_index') }}" class="link">back to list</a>

    <a href="{{ path('app_evenement_edit', {'idEvent': evenement.idEvent}) }}" class="link">edit</a>

    {{ include('evenement/_delete_form.html.twig') }}
</div>
{% endblock %}
