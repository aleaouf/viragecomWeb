{% extends 'base.html.twig' %}

{% block title %}Reactions index{% endblock %}

{% block body %}
    <h1>Reactions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdArticle</th>
                <th>IdUser</th>
                <th>TypeReact</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reaction in reactions %}
            <tr>
                <td>{{ reaction.id }}</td>
                <td>{{ reaction.idArticle }}</td>
                <td>{{ reaction.idUser }}</td>
                <td>{{ reaction.typeReact }}</td>
                <td>
                    <a href="{{ path('app_reactions_show', {'id': reaction.id}) }}">show</a>
                    <a href="{{ path('app_reactions_edit', {'id': reaction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reactions_new') }}">Create new</a>
{% endblock %}
