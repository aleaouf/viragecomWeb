{% extends 'base.backoffice.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h1>Categorie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCategorie</th>
                <th>Espacecouvert</th>
                <th>Espaceenfants</th>
                <th>Espacefumeur</th>
                <th>Servicerestauration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.idCategorie }}</td>
                <td>{{ categorie.espacecouvert ? 'Yes' : 'No' }}</td>
                <td>{{ categorie.espaceenfants ? 'Yes' : 'No' }}</td>
                <td>{{ categorie.espacefumeur ? 'Yes' : 'No' }}</td>
                <td>{{ categorie.servicerestauration ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_categorie_show', {'idCategorie': categorie.idCategorie}) }}">show</a>
                    <a href="{{ path('app_categorie_edit', {'idCategorie': categorie.idCategorie}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_categorie_new') }}">Create new</a>
{% endblock %}
