{% extends 'base.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
    <h1>Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdReponse</th>
                <th>IdReclamation</th>
                <th>Contenu</th>
                <th>DateRep</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.idReponse }}</td>
                <td>{{ reponse.idReclamation }}</td>
                <td>{{ reponse.contenu }}</td>
                <td>{{ reponse.dateRep ? reponse.dateRep|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_reponse_show', {'idReponse': reponse.idReponse}) }}">show</a>
                    <a href="{{ path('app_reponse_edit', {'idReponse': reponse.idReponse}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}">Create new</a>
{% endblock %}
