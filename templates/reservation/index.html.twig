{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
<div  style="padding-top: 200px;" class="container">
    <h1>Reservation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom d'evenement</th>
                <th>Nombreplace</th>
                <th>NomUser</th>
                <th>PrenomUser</th>
                <th>Age</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.idEvent.getNomEvent }}</td>

                <td>{{ reservation.nombreplace }}</td>
                <td>{{ reservation.nomUser }}</td>
                <td>{{ reservation.prenomUser }}</td>
                <td>{{ reservation.age }}</td>
                
                <td>
                    <a href="{{ path('app_reservation_show', {'idReservation': reservation.idReservation}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'idReservation': reservation.idReservation}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Create new</a>
    <div>
{% endblock %}
